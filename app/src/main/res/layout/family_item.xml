<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_3sdp"
    android:elevation="@dimen/_10sdp"
    android:outlineAmbientShadowColor="#0D3F45"
    app:cardCornerRadius="@dimen/_10sdp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/whole_family_item_card_view"
        android:clickable="true"
        android:focusable="true"
        android:longClickable="true"
        android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/whole_family_item"
        android:clickable="true"
        android:longClickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <TextView
            android:id="@+id/id_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/mainActivityTextColor"
            android:textSize="@dimen/_15ssp" />

        <TextView
            android:id="@+id/husband_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:text="TextView"
            android:textColor="@color/mainActivityTextColor"
            android:textSize="@dimen/_15ssp" />

        <TextView
            android:id="@+id/wife_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:text="TextView"
            android:textColor="@color/mainActivityTextColor"
            android:textSize="@dimen/_15ssp" />

        <TextView
            android:id="@+id/phone_number_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:text="TextView"
            android:textColor="@color/mainActivityTextColor"
            android:textSize="@dimen/_15ssp" />

        <TextView
            android:id="@+id/status_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:text="TextView"
            android:textColor="@color/mainActivityTextColor"
            android:textSize="@dimen/_15ssp" />

    </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
